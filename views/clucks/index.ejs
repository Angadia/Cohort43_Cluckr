<%- include("../partials/header") %>
<main class="main">
  <aside class="trends">
    <div class="trending_clucks">
      <h2>Trending Clucks</h2>
      <ul class="trending_hash_tags">
        <% if (trends) { if (trends.length > 0) {
        trends.forEach(trending_hash_tag_count => { %>
        <li>
          #<%= trending_hash_tag_count.hash_tag %> - <%=
          trending_hash_tag_count.count %>
        </li>
        <% }); }; }; %>
      </ul>
    </div>
  </aside>
  <% if (clucks) { if (clucks.length > 0) { %>
  <clucks class="clucks">
    <% } clucks.forEach(cluck => { %>
    <article class="cluck">
      <cluck class="cluck_details">
        <div class="cluck_image">
          <img
            src="/images/cluck_image.jpg"
            alt="Cluck image"
            class="cluck_image"
          />
        </div>
        <div class="cluck_content">
          <h4 class="cluck_user_title">
            <%= cluck.username %> <%= String.fromCharCode(0x2022) %> <%=
            cluck.time_ago %>
          </h4>
          <p class="cluck_user_content"><%= cluck.content %></p>
          <img
            src="<%= cluck.image_url %>"
            <% if (cluck.image_url) { %>
              alt="image url"
            <% } %>
            class="cluck_image_url"
          />
        </div>
      </cluck>
    </article>
    <% }); if (clucks.length > 0) { %>
  </clucks>
  <% }; }; %>
</main>
<%- include("../partials/footer") %>
